<p class="notice">
    <%= flash[:notice] %>
</p>

<h1>Books</h1>

<table style="table-layout:fixed;" >
  
  <thead>
    <tr>
      <th style="width:192px;" >Title</th>
      <th style="width:400px;" >Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <span><%= book.title %></span>
        </td>
        <td>
          <span><%= book.body %></span>
        </td>
        <td>
          <span>
            <%= link_to "Show", "/books/#{book.id}" %>
          </span>
        </td>
        <td>
          <span>
            <%= link_to "Edit", "/books/#{book.id}/edit" %>
          </span>
        </td>
        <td>
          <span>
            <%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: "Are you sure?"} %>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
  
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <div class="error_explanation">
    <h2 class="error_title"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul class="error_list">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model:@book, local:true do |f| %>

  <div class="field">
    <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="field">
    <h4>Body</h4>
      <%= f.text_area :body %> <br>
  </div>
 
  <div class"field">
      <%= f.submit 'Create Book' %>
  </div>
  
<% end %>
