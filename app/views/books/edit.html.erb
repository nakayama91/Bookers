<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>



    <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

    <div class="field">
        <h4>Title</h4>
            <%= f.text_field :title %>
    </div>

    <div class="field">
        <h4>Body</h4>
            <%= f.text_area :body %> <br>
    </div>
    
    <div class="field">
        <%= f.submit 'Update Book' %>
    </div>
  
<% end %>

<p>
    <span>
        <%= link_to "show", controller:'books', action:'show' %>
    </span>
    <span>|</span>
    <span>
        <%= link_to "Back", "/books" %>
    </span>
</p>
