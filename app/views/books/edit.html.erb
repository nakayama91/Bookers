<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error_explanation">
    <h2 class="error_title"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul class="error_list">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

    <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

    <div class="field">
        <h4>Title</h4>
            <%= f.text_field :title %>
    </div>

    <div class="field">
        <h4>Body</h4>
            <%= f.text_area :body %> <br>
    </div>
    
    <div class="field">
        <%= f.submit 'Update Book' %>
    </div>
  
<% end %>

<p>
    <span>
        <%= link_to "show", controller:'books', action:'show' %>
    </span>
    <span>|</span>
    <span>
        <%= link_to "Back", "/books" %>
    </span>
</p>
